<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <!-- Add CompXenotypeSource to Xenogerm ThingDef -->
    <!-- First ensure comps element exists, then add our comp -->
    <Operation Class="PatchOperationSequence">
        <operations>
            <li Class="PatchOperationTest">
                <xpath>/Defs/ThingDef[defName="Xenogerm"]/comps</xpath>
                <success>Always</success>
            </li>
            <li Class="PatchOperationConditional">
                <xpath>/Defs/ThingDef[defName="Xenogerm"]/comps</xpath>
                <nomatch Class="PatchOperationAdd">
                    <xpath>/Defs/ThingDef[defName="Xenogerm"]</xpath>
                    <value>
                        <comps />
                    </value>
                </nomatch>
            </li>
            <li Class="PatchOperationAdd">
                <xpath>/Defs/ThingDef[defName="Xenogerm"]/comps</xpath>
                <value>
                    <li Class="XenogermsForSale.CompProperties_XenotypeSource" />
                </value>
            </li>
        </operations>
    </Operation>
</Patch>
